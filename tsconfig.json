{
  "compilerOptions": {
    "target": "es2019",
    "module": "commonjs",
    "noEmit": true,
    "sourceMap": true, 
    "outDir": "dist", 
    "rootDir": ".", 
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "typeRoots": [
      "./node_modules/@types", 
      "./src/types"
    ],
    "baseUrl": "src",
    "paths": {
      "middlewares": ["middlewares/*"]
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/types/**/*.d.ts"
  ],
  "exclude": [
    "node_modules", "dist"
  ],
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  }
}