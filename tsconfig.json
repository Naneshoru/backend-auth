{
  "compilerOptions": {
    "target": "es2019",
    "module": "CommonJS",
    "noEmit": true,
    "sourceMap": true, 
    "outDir": "dist", 
    "rootDir": ".", 
    "esModuleInterop": true,
    "allowImportingTsExtensions": true,
    "typeRoots": [
      "./node_modules/@types", 
      "./src/types"
    ],
    "baseUrl": "src",
    "paths": {
      "middlewares": ["middlewares/*"],
      "controllers": ["controllers/*"],
      "routes": ["routes/*"],
      "models": ["models/*"],
    }
  },
  "include": [
    "src/**/*.ts", 
    "src/types/**/*.d.ts", 
  ],
  "exclude": [
    "node_modules", "dist"
  ]
}